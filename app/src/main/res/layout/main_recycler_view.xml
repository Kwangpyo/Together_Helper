<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/retangle"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:largeHeap="true"
            android:layout_gravity="center"/>

<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

        <customfonts.MyTextView_Medium
            android:id="@+id/help_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:layout_marginTop="5dp"
            android:text="매칭 상태"/>


    <customfonts.MyTextView_Bold
        android:id="@+id/Helpee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helpee 이름"
        android:textSize="15dp"
        android:textColor="#2d2d2d"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <customfonts.MyTextView_Medium
        android:id="@+id/Help_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="#b2b2b2"
        android:text="위치" />

</LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:weightSum="1">

            <customfonts.MyTextView_Bold
                android:id="@+id/helpee_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help 상세보기"
                android:textSize="15dp"
                android:layout_weight="0.5"
                android:textColor="#2d2d2d"
                android:layout_marginTop="3dp"
                android:textStyle="bold"/>


            <customfonts.MyTextView_Bold
                android:id="@+id/Help_startfinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff0000"
                android:textSize="20dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:text="종료하기"/>


        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E3E3E3"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

           <ImageView
               android:id="@+id/clock"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:layout_marginLeft="15dp"
               android:layout_gravity="center"
               android:background="@drawable/ic_clock"/>

            <customfonts.MyTextView_Medium
                android:id="@+id/Help_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#b2b2b2"
                android:layout_gravity="center"

                android:text="6h 21m - 1 stop , DXB"/>



            <customfonts.MyTextView_Bold
                android:id="@+id/Help_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="#ff0000"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:text="취소하기"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#E3E3E3"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </LinearLayout>

</LinearLayout>