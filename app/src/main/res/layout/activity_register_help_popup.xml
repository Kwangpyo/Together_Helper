<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    tools:context=".popup.RegisterHelp_popup">


    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registerHelp_helptype"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/registerHelp_helplocation"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/registerHelp_helpdate"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/registerHelp_helpeeid"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/registerHelp_helpeephone"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/registerHelp_helpeefeedback"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/registerHelp_helperid"
            android:textSize="15sp"
            android:textColor="#FF0000"
            android:layout_weight="0.4"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="0.5"
            android:text="신청"
            android:textSize="15sp"
            android:textColor="#000000"
            android:padding="16dp"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:onClick="mOnRegister"/>
        <Button
            android:text="취소"
            android:layout_weight="0.5"
            android:textSize="15sp"
            android:textColor="#000000"
            android:padding="16dp"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:onClick="mOnClose"/>
    </LinearLayout>


</LinearLayout>