<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".CustomSearch">


    <include layout="@layout/refresh_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="32dp"
                    android:text="날짜(~부터)" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/calendaricon"
                    android:id="@+id/customsearch_mindate_img"/>

            </LinearLayout>



            <TextView
                android:id="@+id/custom_search_mindate_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="30dp"
                android:drawablePadding="14dp"
                android:maxLength="10"
                android:maxLines="1"/>

            <View
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:background="#edecf2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="32dp"
                    android:text="시간(~부터)" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/clockicon"
                    android:id="@+id/customsearch_minclock_img"/>


            </LinearLayout>


            <TextView
                android:id="@+id/custom_search_minclock_txt"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:drawablePadding="14dp"
                android:maxLength="10"
                android:maxLines="1"/>

            <View
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:background="#edecf2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="32dp"
                android:text="봉사 종류 (아래 텍스트를 클릭하여 선택해 주세요)" />

            <Spinner
                android:id="@+id/custom_search_spinner"
                android:layout_width="150dp"
                android:layout_height="29dp"
                android:layout_marginBottom="18dp"
                android:entries="@array/help"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="31dp" />

            <View
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:background="#edecf2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="32dp"
                    android:text="위치 (ex:경기도 수원시 영통구 영통동)" />


            </LinearLayout>



            <EditText
                android:hint="위치를 입력하세요"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/custom_search_loc_edittxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="12dp"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:drawablePadding="14dp"
                android:maxLength="10"
                android:maxLines="1" />

            <View
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:background="#edecf2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="32dp"
                    android:text="날짜(~까지)" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/calendaricon"
                    android:id="@+id/customsearch_maxdate_img"/>

            </LinearLayout>



            <TextView
                android:id="@+id/custom_search_maxdate_txt"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:paddingLeft="31dp"
                android:text="" />

            <View
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:background="#edecf2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="32dp"
                    android:text="시간(~까지)" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/clockicon"
                    android:id="@+id/customsearch_maxclock_img"
                    />

            </LinearLayout>



            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/custom_search_maxclock_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:drawablePadding="14dp"
                android:maxLength="10"
                android:maxLines="1"/>

            <View
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:background="#edecf2" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingLeft="35dp"
            android:paddingRight="25dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/custom_search_find_btn"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:text="검색"
                android:textColor="#ffff"
                android:background="@drawable/border"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
